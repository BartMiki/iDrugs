@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/medicine.svg" alt="Leki" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Sprawdź aktualny spis leków
                    <a class="btn btn-default" asp-controller="Medicine" asp-action="Index">
                        Spis leków
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/apothecaries.svg" alt="Aptekarze" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Poznaj naszych pracowników
                    <a class="btn btn-default" asp-controller="Apothecary" asp-action="Index">
                        Aptekarze
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-12">
        <h1 class="text text-center">Witaj w systemie zarzadzania apteką iDrugs</h1>
    </div>      
</div>
