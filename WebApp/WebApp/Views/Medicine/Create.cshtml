@model WebApp.Models.MedicineModels.CreateMedicineViewModel

@{
    ViewData["Title"] = "Dodaj nowy lek";
}

<h2>Utwórz nowy lek</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit" class="control-label"></label>
                <select asp-for="Unit" class="form-control" asp-items="@{
                    new SelectList(Model.UnitSelectList, "EnumValue", "DisplayName")
                        }"></select>
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedType" class="control-label"></label>
                <select asp-for="MedType" class="form-control" asp-items="@{
                    new SelectList(Model.MedTypeSelectList, "EnumValue", "DisplayName")
                        }"></select>
                <span asp-validation-for="MedType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RefundString" class="control-label"></label>
                <input asp-for="RefundString" class="form-control" placeholder="np.: 20%" />
                <span asp-validation-for="RefundString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Uwtórz" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<button onclick="location.href='@Url.Action("Index","Medicine")'"
        class="btn btn-default">
    <span class="glyphicon glyphicon-arrow-left"></span>
    <span>Powrót</span>
</button>

