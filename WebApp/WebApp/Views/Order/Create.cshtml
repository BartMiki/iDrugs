@using WebApp.Models.OrderModels
@model CreateOrderViewModel

@{
    ViewData["Title"] = "Utwórz zamównienie";
}

<h2>Utwórz zamównienie</h2>

<h4>Zamawiający</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="SelectedId" class="form-control selectpicker" data-live-search="true"
                    asp-items="@{new SelectList(Model.ApothecaryList,"Id","FullName")}"></select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-plus"></span>
                    <span>Utwórz</span>
                </button>
            </div>
        </form>
    </div>
</div>

<button onclick="location.href='@Url.Action("Index","Order")'"
        class="btn btn-default">
    <span class="glyphicon glyphicon-arrow-left"></span>
    <span>Powrót</span>
</button>

