@using WebApp.Models.OrderModels;
@model AddOrderItemViewModel

@{
    ViewData["Title"] = "Dodaj lek do zamówienia";
}

<h2>Dodaj lek do zamówienia</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrderItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MedicineId" class="control-label"></label>
                <select asp-for="MedicineId" class="form-control" 
                    asp-items="@{new SelectList(Model.MedicineList, "Id", "FullName")}"></select>
                <span asp-validation-for="MedicineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="OrderId" />
            <div class="form-group">
                <input type="submit" value="AddOrderItem" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>